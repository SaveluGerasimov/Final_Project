<!-- _DefaultLeftMenu.cshtml -->
<div class="side-menu">
    <h3 class="menu-header">
        <i class="fas fa-bars"></i> Меню
    </h3>

    <ul class="menu-list">

        <li class="menu-item">
            <a href="/" class="menu-link">
                <i class="fas fa-user"></i> Профиль
            </a>
        </li>

        <li class="menu-item">
            <a asp-controller="Article" asp-action="Index" class="menu-link">
                <i class="fas fa-book"></i> Статья
            </a>
        </li>
        <li class="menu-item">
            <a asp-controller="Tag" asp-action="Index" class="menu-link">
                <i class="fas fa-tag"></i> Теги
            </a>
        </li>
        @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Administrator") || User.IsInRole("Moderator")))
        {
        
            @if (User.IsInRole("Administrator"))
            {
                <li class="menu-item">
                    <a asp-controller="Role" asp-action="Index" class="menu-link">
                        <i class="fas fa-medal"></i> Роли
                    </a>
                </li>
            }
            <li class="menu-item">
            <a asp-controller="User" asp-action="Index" class="menu-link">
                <i class="fas fa-users"></i> Пользователи
            </a>
            </li>
        }
        
    </ul>

    <div class="menu-footer">
        <small class="text-muted">Версия 1.0.0</small>
    </div>
</div>

<style>
    .side-menu {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .menu-header {
        color: var(--primary-color);
        padding: 0.5rem 1rem;
        border-bottom: 1px solid #eee;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .menu-list {
        list-style: none;
        padding: 0;
        margin: 1rem 0;
        flex-grow: 1;
    }

    .menu-item {
        margin-bottom: 0.5rem;
    }

    .menu-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        color: var(--text-dark);
        text-decoration: none;
        border-radius: 4px;
        transition: var(--transition);
    }

        .menu-link:hover {
            background-color: rgba(75, 108, 183, 0.1);
            color: var(--primary-color);
        }

        .menu-link i {
            width: 20px;
            text-align: center;
        }

    .badge {
        background-color: var(--primary-color);
        color: white;
        border-radius: 10px;
        padding: 0.15rem 0.5rem;
        font-size: 0.75rem;
        margin-left: auto;
    }

    .menu-footer {
        padding: 1rem;
        border-top: 1px solid #eee;
        text-align: center;
    }
</style>