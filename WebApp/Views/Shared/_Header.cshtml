<header>
    <button class="menu-toggle" id="leftMenuToggle">
        <i class="fas fa-bars"></i>
    </button>

    <div class="header-logo">
        <a href="/" style="color:inherit;">
            <i class="fas fa-rocket"></i>
            <span>WebApp</span>
        </a>
    </div>

    <div class="header-right">
        <button class="menu-toggle" id="rightMenuToggle">
            <i class="fas fa-ellipsis-v"></i>
        </button>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <form asp-area="Identity" asp-controller="Home" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-link">Выход</button>
            </form>
        }
    </div>
</header>
