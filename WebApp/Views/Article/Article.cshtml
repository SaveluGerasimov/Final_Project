@using WebApp.Models.View.Article
@model ArticleViewModel

@section _AsideRight {
    @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Administrator") || User.Identity.Name == Model.AuthorName))
    {
        <div class="article-actions">
            <a asp-controller="Article"
               asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-warning">
                ✏️ Редактировать
            </a>
            <form asp-controller="Article"
                  asp-action="Delete"
                  asp-route-id="@Model.Id"
                  method="post"
                  onsubmit="return confirm('Вы уверены, что хотите удалить эту статью?')"
                  class="d-inline">
                <button type="submit" class="btn btn-danger">🗑️ Удалить</button>
            </form>
        </div>
    }
    
} 



@if (Model != null)
{
    <div class="article-container">
        <!-- Заголовок и действия -->
        <div class="article-header">
            <h1 class="article-title">@Model.Title</h1>

            
        </div>

        <!-- Мета-информация -->
        <div class="article-meta">
            <span class="author">Автор: @Model.AuthorName</span>
            <span class="created-at">Опубликовано: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
            @if ((Model.UpdatedAt - Model.CreatedAt).Duration() > TimeSpan.FromSeconds(1))
            {
                <span class="updated-at">Обновлено: @Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</span>
            }
            
        </div>

        <!-- Тело статьи -->
        <div class="article-content">
            <p>@Model.Content</p>
        </div>

        <!-- Теги -->
        @if (Model.Tags.Any())
        {
            <div class="article-tags">
                @foreach (var tag in Model.Tags)
                {
                    <span class="tag badge bg-secondary">#@tag</span>
                }
            </div>
        }

        <!-- Комментарии -->
        <div class="comments-section">
            <h3>Комментарии (@Model.Comments.Count)</h3>

            @if (Model.Comments?.Any() == true)
            {
                <div class="comments-list">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="comment-card">
                            <div class="comment-header">
                                <strong class="comment-author">@comment.Author</strong>
                                <span class="comment-date">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                            <div class="comment-body">
                                <p>@comment.Message</p>
                            </div>
                            
                                <div class="comment-footer">
                                    <small>Изменено: @comment.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Administrator") || User.Identity.Name == @comment.Author))
                                {
                                    <button type="button"
                                            class="btn edit-comment"
                                            onclick="startEditComment('@comment.Id', this)">
                                        ✏️
                                    </button>

                                    <button type="button"
                                            class="btn delete-comment"
                                            data-id="@comment.Id"
                                            onclick="deleteComment('@comment.Id', this)">
                                        🗑️
                                    </button>
                                }
                            </div>
                            
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Комментариев пока нет. Будьте первым!</p>
            }

            <!-- Форма добавления комментария -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="add-comment">
                    <h4>Добавить комментарий</h4>
                    <form asp-controller="Comment" asp-action="Create" method="post">
                        <input type="hidden" name="ArticleId" value="@Model.Id" />
                        <div class="form-group">
                            <textarea name="Message" class="form-control" rows="3"
                              placeholder="Ваш комментарий..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Отправить</button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <a asp-controller="Account" asp-action="Login">Войдите</a>, чтобы оставить комментарий
                </div>
            }
        </div>
    </div>
}
<script>
        async function deleteComment(id, btn) {
        if (!confirm("Вы уверены, что хотите удалить комментарий?")) return;

        const response = await fetch(`/Comment/Delete/${id}`, {
            method: "POST",
            headers: {
                "X-Requested-With": "XMLHttpRequest",
                "X-CSRF-TOKEN": document.querySelector("input[name='__RequestVerificationToken']")?.value
            }
        });

        const result = await response.json();

        if (result.success) {
            // Найдем карточку комментария и удалим
            const commentCard = btn.closest(".comment-card");
            if (commentCard) {
                commentCard.remove();
            }
        } else {
            alert(result.message || "Ошибка при удалении");
        }
    }
    
    //редактирование комментария
        function startEditComment(id, btn) {
        const commentCard = btn.closest(".comment-card");
        const body = commentCard.querySelector(".comment-body p");
        const footer = commentCard.querySelector(".comment-footer");

        // Сохраняем старый текст
        const oldText = body.innerText;

        // Делаем textarea вместо текста
        body.innerHTML = `
            <textarea class="form-control edit-textarea">${oldText}</textarea>
            <div class="mt-2">
                <button class="btn btn-primary btn-sm" onclick="saveEditComment('${id}', this)">💾 Сохранить</button>
                <button class="btn btn-secondary btn-sm" onclick="cancelEditComment(this, '${oldText}')">❌ Отмена</button>
            </div>
        `;

        // Скрываем кнопки редактирования/удаления на время
        footer.style.display = "none";
    }

    async function saveEditComment(id, btn) {
        const commentCard = btn.closest(".comment-card");
        const textarea = commentCard.querySelector(".edit-textarea");
        const newText = textarea.value;

        const response = await fetch(`/Comment/Edit/${id}`, {
            method: "POST",
            headers: {
                "Content-Type": "application/x-www-form-urlencoded; charset=UTF-8",
                "X-Requested-With": "XMLHttpRequest",
                "X-CSRF-TOKEN": document.querySelector("input[name='__RequestVerificationToken']")?.value
            },
            body: `message=${encodeURIComponent(newText)}`
        });

        const result = await response.json();

        if (result.success) {
            commentCard.querySelector(".comment-body").innerHTML = `<p>${result.message}</p>`;
            commentCard.querySelector(".comment-footer small").innerText = "Изменено: " + result.updatedAt;
            commentCard.querySelector(".comment-footer").style.display = "block";
        } else {
            alert(result.message || "Ошибка при сохранении");
        }
    }

    function cancelEditComment(btn, oldText) {
        const commentCard = btn.closest(".comment-card");
        commentCard.querySelector(".comment-body").innerHTML = `<p>${oldText}</p>`;
        commentCard.querySelector(".comment-footer").style.display = "block";
    }

</script>

