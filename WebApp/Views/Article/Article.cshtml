    }

        .btn-warning:hover {
            background: #e0a800;
            transform: translateY(-1px);
        }

    .btn-danger {
        background: #dc3545;
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background: #c82333;
            transform: translateY(-1px);
        }

    .btn-primary {
        background: #007bff;
